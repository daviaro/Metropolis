<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ALL" name="Metropolis2" packages="">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="bean" level="trace"  additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="dao" level="all" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>